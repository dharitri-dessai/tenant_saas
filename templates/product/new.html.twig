{% extends 'base.html.twig' %}

{% block title %}New Product{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-2xl mx-auto">
            <div class="flex justify-between items-center mb-8">
                <h1 class="text-3xl font-bold text-gray-900">Create New Product</h1>
            </div>

            {# {% for message in app.flashes('success') %}
                <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
                    <span class="block sm:inline">{{ message }}</span>
                </div>
            {% endfor %} #}

            <div class="bg-white shadow overflow-hidden sm:rounded-lg">
                <div class="px-4 py-5 sm:p-6">
                    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                        
                        <div class="grid grid-cols-1 gap-6">
                            <div>
                                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.name, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.description, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.category, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.category, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.category, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.size, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                <div class="flex items-center space-x-6">
                                    {% for choice in form.size.children %}
                                        <div class="inline-flex items-center">
                                            {{ form_widget(choice, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded-full'}}) }}
                                            {{ form_label(choice, null, {'label_attr': {'class': 'ml-2 text-sm text-gray-700'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ form_errors(form.size, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.price, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.price, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.price, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.color, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.color, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.color, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.releaseDate, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.releaseDate, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.releaseDate, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.image, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                                {{ form_widget(form.image, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
                                {{ form_errors(form.image, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                            </div>

                            <div>
                                {{ form_label(form.location, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                                <div class="flex items-center space-x-6">
                                    {% for choice in form.location.children %}
                                        <div class="inline-flex items-center">
                                            {{ form_widget(choice, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'}}) }}
                                            {{ form_label(choice, null, {'label_attr': {'class': 'ml-2 text-sm text-gray-700'}}) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                {{ form_errors(form.location, {'attr': {'class': 'mt-2 text-sm text-red-600'}}) }}
                            </div>

                            <div class="flex items-center">
                                {{ form_widget(form.inStock, {'attr': {'class': 'h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded'}}) }}
                                {{ form_label(form.inStock, null, {'label_attr': {'class': 'ml-2 block text-sm font-medium text-gray-900'}}) }}
                            </div>
                        </div>

                        <div class="pt-5">
                            <div class="flex justify-end">
                                <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                                    Create Product
                                </button>
                            </div>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %} 